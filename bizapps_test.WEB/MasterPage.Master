        <div class="container" style=" height: auto;" >
                      <form runat="server" role="form" >
                          <div class="row" style="height: auto; margin-bottom: 60px;">
                          <div class="col-lg-9" style="padding-right: 30px; padding-left: 0;" >
                              <asp:ContentPlaceHolder ID="ContentPlaceHolder1"   runat="server">
                              </asp:ContentPlaceHolder>
                            
                          </div>  
                          <div class="col-lg-3 sidebarcontainer"  >
                              <asp:ContentPlaceHolder ID="ContentPlaceHolder2"   runat="server">
                              </asp:ContentPlaceHolder>
                             
                              <div class="panel panel-default sidebar" style="text-align: left;" >
                                  <h4 >CATEGORIES</h4>
                                  <div id="categorycontainer" class="sidebarlistcontainer">
                                      <asp:BulletedList ID="CategoryList" CssClass="SideBarList" DisplayMode="LinkButton" OnClick="CategoryList_OnClick" runat="server">
                                          <asp:ListItem  Text="All categories" Value="allcategories"/> 
                                          <asp:ListItem Text="Without category" Value="withoutcategory"/> 
                                      </asp:BulletedList>
                                  </div>
                                
                              </div>
                              
                                 <asp:Login ID="AuthForm" VisibleWhenLoggedIn="False"  OnLoggedIn="AuthForm_OnLoggedIn" OnAuthenticate="AuthForm_OnAuthenticate" Visible="False" runat="server">
                                            <LayoutTemplate>
                                                <div class="panel panel-default sidebar" id="loginform">
                                                <h4>Log In</h4>
                                                <asp:TextBox ID="UserName" CssClass="loginformtextbox" placeholder="Login" runat="server"></asp:TextBox>
                                                    <asp:RequiredFieldValidator ID="UserNameRequired"
                                                                                ControlToValidate="UserName"
                                                                                ErrorMessage="*"
                                                                                ForeColor="Red"
                                                                                ValidationGroup="AuthForm"
                                                                                runat="server"/>
                                                    <asp:RegularExpressionValidator ID="UserNameValidator" 
                                                                                    ControlToValidate="UserName"
                                                                                    ValidationExpression="[\w| ]*"
                                                                                    ErrorMessage="Incorrect user name"
                                                                                    ValidationGroup="AuthForm"
                                                                                    runat="server"/>
                                                <asp:TextBox ID="Password" CssClass="loginformtextbox" placeholder="Password" TextMode="Password" runat="server"></asp:TextBox>
                                                    <asp:RequiredFieldValidator ID="PasswordRequired" 
                                                                                ControlToValidate="Password"
                                                                                ErrorMessage="*"
                                                                                ForeColor="Red"
                                                                                ValidationGroup="AuthForm"
                                                                                runat="server"/>
                                                    <asp:RegularExpressionValidator ID="PasswordValidator" 
                                                                                    ControlToValidate="Password"
                                                                                    ValidationExpression='[\w| !"@§$%&/()=\-?\*]*'
                                                                                    ErrorMessage="Incorrect password"
                                                                                    ValidationGroup="AuthForm"
                                                                                    runat="server"/> <br/>
                                                 <asp:Button ID="Login" CssClass="Login" CommandName="Login" Text="LogIn" runat="server"/>
                                                </div>
                                            </LayoutTemplate>
                                 </asp:Login>
                              
                              <div class="panel panel-default sidebar" Visible="False" id="adminpanel" style="text-align: left;" runat="server" >
                                  <h4 >ADMINISTRATION PANEL</h4>
                                  <div class="sidebarlistcontainer">
                                      <ul class="SideBarList">
                                          <il> <a href="PostCreation.aspx"> Post creation </a></il> <br/>
                                          <il> <a href="CategoryCreation.aspx"> Category creation</a></il>
                                      </ul>
                                  </div>
                              </div>

                              <div class="panel panel-default sidebar" id="LogoutPanel" Visible="False" style="text-align: left;" runat="server" >
                                  <asp:Label ID="LabelUserName" runat="server"/>
                                  <p style="margin-top: 20px; margin-left: 10px;">
                                      <button id="ButtonLogOut" CausesValidation="False" style="margin-right: 5px;" OnServerClick="ButtonLogOut_OnServerClick" runat="server"> Log out</button>
                                      <button id="ButtonChangePassword" CausesValidation="False"> Change password</button>
                                  </p>
                                
                              </div>

                          </div>
